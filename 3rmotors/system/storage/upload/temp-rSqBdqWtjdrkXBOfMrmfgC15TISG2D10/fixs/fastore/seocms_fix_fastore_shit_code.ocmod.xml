				if ($extension['code']!='blog') {
					$modules = $this->config->get($extension['code'] . '_module');
				} else {
					$modules = array();
				}
    ]]></add>
    </operation>
    </file>
    <file path="catalog/view/theme/fastor/template/common/{home.tpl,header.tpl,footer.tpl}" error="skip">
