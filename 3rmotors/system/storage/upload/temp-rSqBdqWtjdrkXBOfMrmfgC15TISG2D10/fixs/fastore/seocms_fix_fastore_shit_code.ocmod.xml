        <search><![CDATA[DIR_TEMPLATE.$config->get('config_template')."/lib/module.php"]]></search>
        <add position="replace"><![CDATA[modification(DIR_TEMPLATE.$config->get('config_template')."/lib/module.php")]]></add>
